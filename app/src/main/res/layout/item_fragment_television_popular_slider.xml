<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp">
    <androidx.cardview.widget.CardView
        android:elevation="8dp"
        card_view:cardUseCompatPadding="true"
        android:layout_marginTop="24dp"
        android:id="@+id/item_movies_page_popular_movies_card_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="12dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView

            android:id="@+id/item_fragment_television_popular_movies_slider_img_view"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_marginTop="16dp"
            android:layout_marginStart="340dp"
            android:src="@drawable/ic_icoval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_fragment_television_popular_movies_slider_rated_txt"
            android:textColor="@color/White"
            android:text="9.9"
            android:layout_marginTop="20dp"
            android:layout_marginStart="345dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginBottom="24dp"
        android:textColor="@color/Black"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:id="@+id/item_fragment_television_popular_movies_slider_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dizi adÄ±"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_movies_page_popular_movies_card_view" />

</androidx.constraintlayout.widget.ConstraintLayout>